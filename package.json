{
  "name": "iobroker.esphome",
  "version": "0.2.4",
  "description": "Control your ESP8266/ESP32 with simple yet powerful configuration files created and managed by ESPHome",
  "author": {
    "name": "DutchmanNL",
    "email": "rdrozda86@gmail.com"
  },
  "homepage": "https://github.com/DrozmotiX/ioBroker.esphome",
  "license": "MIT",
  "keywords": [
    "ESPHome",
    "ESP",
    "ESP32"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/DrozmotiX/ioBroker.esphome"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.0.3",
    "@sentry/node": "^7.69.0",
    "autopy": "^1.1.1",
    "esphome-native-api": "^1.0.9",
    "nopy": "^0.2.9",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.6.0",
    "@iobroker/testing": "^4.1.0",
    "@types/chai": "^4.3.6",
    "@types/chai-as-promised": "^7.1.6",
    "@types/gulp": "^4.0.13",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.17.17",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.16",
    "@types/sinon-chai": "^3.2.9",
    "axios": "^1.5.0",
    "chai": "^4.3.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.49.0",
    "gulp": "^4.0.2",
    "mocha": "^10.2.0",
    "promisify": "0.0.3",
    "proxyquire": "^2.1.3",
    "sinon": "^16.0.0",
    "sinon-chai": "^3.7.0",
    "typescript": "^5.2.2"
  },
  "main": "main.js",
  "scripts": {
    "release": "release-script",
    "test:js": "mocha --config test/mocharc.custom.json \"{!(node_modules|test)/**/*.test.js,*.test.js,test/**/test!(PackageFiles|Startup).js}\"",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:js && npm run test:package",
    "check": "tsc --noEmit -p tsconfig.check.json",
    "lint": "eslint",
    "ainstall": "pwd && python3 -m venv env && env/bin/python -m pip install esphome",
    "postinstall": "node scripts/install.mjs",
    "nopy": "nopy",
    "npip": "npip",
    "dashboard": "pwd && env/bin/esphome dashboard"
  },
  "python": {
    "execPath": [
      "python3.11",
      "python3.10",
      "python3.9",
      "python3.8",
      "python3.7",
      "python3",
      "python"
    ],
    "path": [
      "."
    ],
    "dependencies": {
      "esphome": ">=2021.8",
      "tornado": ">=3.2"
    }
  },
  "bugs": {
    "url": "https://github.com/DrozmotiX/ioBroker.esphome/issues"
  },
  "readmeFilename": "README.md"
}
